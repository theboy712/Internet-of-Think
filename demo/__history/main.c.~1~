#include <main.h>
#define LCD_ENABLE_PIN PIN_B0
#define LCD_RS_PIN PIN_B1
#define LCD_RW_PIN PIN_B2
#define LCD_DATA4 PIN_B3
#define LCD_DATA5 PIN_B4
#define LCD_DATA6 PIN_B5
#define LCD_DATA7 PIN_B6

#include <lcd.c>

void main()
{
	char k;


   lcd_init();

	lcd_putc("\fReady...\n");

	while(TRUE)
	{
		k = kbd_getc();
		if(k!=0)
			if(k=='*')
				lcd_putc('\f');
			else
				lcd_putc(k);

		//TODO: User Code
	}

}
