void _khoi_dong(void)
{
   char string[];
   printf("AT\n");
   gets(string);
   if(strcmp(string, "OK"))
   {
      Lcd4_Set_Cursor(2,1);
      Lcd4_Write_String("ESP8266 READY");
      Lcd4_Clear();
   }

}
